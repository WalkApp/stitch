#app-node
  height: 100%

.l-layout
  display: flex
  flex-direction: column
  align-items: stretch
  justify-content: center
  min-height: 100%

.l-wrapper
  flex: 1 0 auto

.l-container
  position: relative
  margin: 0 auto
  width: $site_width

.l-selectable
  selectable()

.l-not-selectable
  not-selectable()

.p-error {
  align-items: center
  justify-content: space-around
}
.p-error-footer {
  flex: 0 0 40px
}

.p-error-logo {
  flex: 2 0 100px
}
.p-error-desc {
  flex: 2 0 100px
}

.p-error-empty {
  flex: 2 0 auto;
}
