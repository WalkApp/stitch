.c-post

  .c-p-header
    display: table
    width: 100%
    border-bottom: 1px solid #f2f2f2
    box-sizing: border-box

    .c-p-h-right
      display: table-cell
      width: 25px
      vertical-align: middle

      i
        color: #c5d9e1

    .c-p-h-left
      display: table-cell

      .c-p-h-l-avatar
        display: table-cell
        width: 45px
        height: 45px
        background: no-repeat center center
        background-size: cover
        border-radius: 3px

      .c-p-h-l-info
        display: table-cell
        padding-left: 12px

        .c-p-h-l-i-author
          font-size: 15px

        .c-p-h-l-i-time
          color: #82aabd
          font-size: 12px

  .c-p-shadow
    position: relative
    display: block

    &::after
      absolute: top bottom left right
      box-shadow: 0 0 0 2px rgba(0,0,0,.17) inset
      content: ""

    .c-p-s-image
      width: 100%
      vertical-align: top

  .c-p-info
    display: table
    width: 100%
    height: 52px
    color: $base_icon_color
    font-size: 12px
    padding-top: 0
    box-sizing: border-box

    .c-p-i-icon
      display: table-cell
      width: 36px
      background-color: #e5f3f9
      font-size: 15px
      vertical-align: middle
      text-align: center

    .c-p-i-address
      display: table-cell
      background-color: #f0f8fb
      vertical-align: middle
      padding-left: 12px

  .c-p-description
    padding: 0 24px 12px 24px

  .c-p-footer
    display: table
    box-sizing: border-box
    width: 100%
    border-top: 1px solid #f2f2f2

    .c-p-f-actions
      display: table-cell

      i
        margin-right: .4em
        font-size: 14px
        color: #5f95ae

      .m-btn
        height: 49px
        color: #82aabd
        font-weight: 600
        background: none
        border-radius: 0

        &:hover
          background: #f5fcff

      .c-p-f-a-like

        i
          color: #ff448a
